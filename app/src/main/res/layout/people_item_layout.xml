<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="vertical"
    android:layout_marginBottom="10dp"
    app:cardBackgroundColor="@color/badge_color"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView
                android:paddingHorizontal="10dp"
                android:id="@+id/item_username"
                android:text="Dummy"
                android:textColor="@color/blue_text_color"
                android:textSize="26dp"
                android:fontFamily="@font/rajdhani_regular"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <LinearLayout
                android:gravity=""
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:gravity="center"
                    android:paddingHorizontal="10dp"
                    android:id="@+id/item_clocked_at"
                    android:text="Clocked 08:30"
                    android:textColor="#fff"
                    android:textSize="16dp"
                    android:fontFamily="@font/rajdhani_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:gravity="center"
                    android:paddingHorizontal="10dp"
                    android:id="@+id/item_last_use"
                    android:text="Last used 08:30"
                    android:textColor="#fff"
                    android:textSize="16dp"
                    android:fontFamily="@font/rajdhani_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:gravity="center"
                    android:paddingHorizontal="10dp"
                    android:id="@+id/item_leaves"
                    android:text="Leaves 08:30"
                    android:textColor="#fff"
                    android:textSize="16dp"
                    android:fontFamily="@font/rajdhani_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </LinearLayout>



        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>