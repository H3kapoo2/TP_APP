<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hekapoo.badgekeeper">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BadgeKeeper">
        <activity android:name=".ui_drivers.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ui_drivers.dashboard_driver.DashboardUIDriver">
        </activity>
        <activity android:name=".ui_drivers.dashboard_driver.ActivityUIDriver">
        </activity>
        <activity android:name=".ui_drivers.dashboard_driver.ProfileUIDriver">
        </activity>
        <activity android:name=".ui_drivers.dashboard_driver.SettingsUIDriver">
        </activity>
        <activity android:name=".ui_drivers.dashboard_driver.PeopleUIDriver">
        </activity>
        <activity android:name=".ui_drivers.login_driver.LoginUIDriver">
        </activity>
        <activity android:name=".ui_drivers.create_account_driver.CreateAccount1UIDriver">
        </activity>
        <activity android:name=".ui_drivers.create_account_driver.CreateAccount2UIDriver">
        </activity>
        <activity android:name=".ui_drivers.recovery_driver.RecoveryUIDriver">
        </activity>
    </application>

</manifest>